@model DSS_Assignment_Ebube.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <th class="rounded-circle">
        <img src="@Model.Logo" style="width:200px;height:200px;">
    </th>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearCreated)
        </dd>

        <dd class="col-sm-10">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Players
                        </th>
                        <th>
                            Number
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Players)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JerseyNumber)
                            </td>

                            <td>
                                <a asp-controller="Player" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
